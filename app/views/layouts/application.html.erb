<!DOCTYPE html>
<html>
  <head>
    <title>Rails5Boilerplate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main-container">
     	<p class="notice"><%= notice %></p>
     	<p class="alert"><%= alert %></p>

       <div class="panel panel-default">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <% if user_signed_in? %>
              <%= link_to 'Home', root_path, class: "btn btn-default" %>
              <ul class="nav navbar-nav navbar-right">  
                <%= link_to 'My Account', user_path(current_user), class: "btn btn-default" %>      
                <%= link_to 'Invite Friends', new_user_invitation_path, class: "btn btn-default" %>

                <% if current_user.try(:admin?) %>        
                  <%= link_to 'Users', users_path, class: "btn btn-default" %>
                <% end %>  

                <%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class: "btn btn-default" %>
              </ul>
            <% end %>
          </div>
        </nav>
        <div class="panel-body">
          <%= yield %>
        </div>
      </div>
      
    </div>
  </body>
</html>
